<h1>Editing Student</h1>




<%= form_for(@student) do |form| %>
<% if @student.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

  <ul>
    <% @student.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>




<div class="fh5co-section">
	<div class="container">
		<div class="row">

			<div class="col-md-12 animate-box">
				<h3>New Student</h3>


				<div class="row form-group">

					<div class="col-md-6">
						<!-- name -->
						<%= form.label :name %>
						<%= form.text_field :name, id: :student_name ,class: "form-control"%>

					</div>   


					<div class="col-md-6">
						<!-- mobile -->
						<%= form.label :mobile %>
						<%= form.text_field :mobile, id: :student_mobile,class: "form-control" %>

					</div>
				</div>                



				<div class="row form-group">
					<div class="col-md-12">
						<!-- <label for="email">Email</label> -->
						<%= form.label :email %>
						<%= form.text_field :email, id: :student_email ,class: "form-control"%>

					</div>
				</div>







				<div class="row form-group">
					<div class="col-md-12">

						<!-- quesstion  -->


						<%@questions.each do |question|%>
						<fieldset>
							<b><%= question.body%> ?</b>
							<hr>
							

							<%= form.fields_for :answers do |answer_form| %>
							<fieldset>
								<% question.options.each do |option_array|%>

								<% if (question.id == option_array.question_id)  %>
								<%= answer_form.hidden_field :question_id ,value: question.id%>
								<%= answer_form.radio_button :option, option_array.choose_value%> <%= option_array.choose_value%><br/>
								<hr>
								<%end%>

							</fieldset>
							<%end%>

							<%end%>

						</fieldset>


						<%end%>

						<br>









					</div>
				</div>

				<div class="form-group">
					<%= form.submit "Submit Form" , class: "btn btn-primary"%>
				</div>
				<% end %>



			</div>






		</div>
	</div>
</div>

<!-- ui for elements end -->


















